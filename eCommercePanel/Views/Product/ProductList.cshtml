@model List<eCommercePanel.DAL.DTOs.ProductDTOs.Responses.GetAllProductsDto>

@{
    ViewData["Title"] = "ProductList";
}
@Html.AntiForgeryToken()


<h2>Ürün Listesi</h2>

@if (!string.IsNullOrEmpty(ViewBag.Error as string))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Description</td>
                <td>@item.Price ₺</td>
                <td>@item.Stock</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="100" />
                    }
                </td>
                <td>
                    <button class="btn btn-danger" onclick="confirmDelete(@item.Id)">Sil</button>
                    <button class="btn btn-primary" onclick="openEditModal(@item.Id)">Güncelle</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Ürün Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body" id="editModalBody">
                <!-- Form burada yüklenecek -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm("Silmek istediğinize emin misiniz?")) {
                if (confirm("Bu işlem geri alınamaz. Emin misiniz?")) {
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                    // Form oluştur
                    const form = document.createElement('form');
                    form.method = 'post';
                    form.action = '/Product/ProductDelete/' + id;

                    // Token input
                    const hiddenToken = document.createElement('input');
                    hiddenToken.type = 'hidden';
                    hiddenToken.name = '__RequestVerificationToken';
                    hiddenToken.value = token;
                    form.appendChild(hiddenToken);

                    document.body.appendChild(form);
                    form.submit();
                }
            }
        }
    </script>
}
