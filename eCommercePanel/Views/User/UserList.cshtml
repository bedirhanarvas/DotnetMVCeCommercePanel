@model List<eCommercePanel.DAL.DTOs.UserDTOs.Responses.UserDto>

@{
    ViewData["Title"] = "UserList";
}


<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th></th> <!-- Yeni: Butonlar için boş başlık -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="showOrders(@user.Id)">Siparişleri Gör</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Kullanıcı Siparişleri Modal -->
<div class="modal fade" id="userOrdersModal" tabindex="-1" role="dialog" aria-labelledby="userOrdersLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userOrdersLabel">Kullanıcının Siparişleri</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="ordersContent">
                <!-- Sipariş içeriği buraya gelecek -->
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function showOrders(userId) {
            console.log("Butona tıklandı. User ID:", userId); // ← DEBUG: buton çalışıyor mu?

            $.get('/User/GetOrdersByUserId', { userId: userId }, function (html) {
                console.log("AJAX başarıyla döndü."); // ← DEBUG: istek döndü
                $('#ordersContent').html(html);
                $('#userOrdersModal').modal('show');
            }).fail(function () {
                console.log("AJAX isteği başarısız."); // ← DEBUG: hata varsa
            });
        }
    </script>
}



